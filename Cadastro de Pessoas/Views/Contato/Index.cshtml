@model List<ContatoModelcs>
@{
    ViewData["Title"] = "Listagem de contatos";
}

<div class="text-center">

    <div class="d-grip gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Create">Adicionar novo contato</a>
    </div>
    <br>
<h1 class="display-4">Listagem de contatos</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Celular</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ContatoModelcs contato in Model)
                {
                    <tr>
                        <th scope="row">@contato.id</th>
                        <td>@contato.nome</td>
                        <td>@contato.email</td>
                        <td>@contato.celular</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-success" asp-route-id="@contato.id" asp-controller="Contato" asp-action="Edit">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@contato.id" asp-controller="Contato" asp-action="DeleteConfirmation">Apagar </a>
                            </div>
                        </td>
                    </tr>
                }
            }
    </tbody>
</table>

</div>
